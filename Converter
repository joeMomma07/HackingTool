pip install pymupdf
pip install python-docx

import fitz  # PyMuPDF
from docx import Document
import os

def pdf_to_word(pdf_path, word_path):
    doc = fitz.open(pdf_path)
    text = ""
    for page_num in range(doc.page_count):
        page = doc[page_num]
        text += page.get_text()

    docx = Document()
    docx.add_paragraph(text)

    docx.save(word_path)

def word_to_pdf(word_path, pdf_path):
    doc = Document(word_path)
    pdf = fitz.open()

    for paragraph in doc.paragraphs:
        pdf_page = pdf.new_page()
        pdf_page.insert_text((10, 10), paragraph.text)

    pdf.save(pdf_path)

if __name__ == "__main__":
    # Convert PDF to Word
    pdf_file = "example.pdf"
    word_output = "output.docx"
    pdf_to_word(pdf_file, word_output)
    print(f"Converted {pdf_file} to {word_output}")

    # Convert Word to PDF
    word_file = "example.docx"
    pdf_output = "output.pdf"
    word_to_pdf(word_file, pdf_output)
    print(f"Converted {word_file} to {pdf_output}")
